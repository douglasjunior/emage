{
  "name": "emage",
  "productName": "E-Mage",
  "version": "1.0.0",
  "description": "From developers to developers: a tool to help with image optimization.",
  "main": "app/index.js",
  "private": true,
  "scripts": {
    "start": "run-p webpack forge:start",
    "build": "run-s webpack:build forge:package",
    "forge:start": "electron-forge start",
    "forge:package": "electron-forge package",
    "make:mac": "electron-forge make --platform=darwin",
    "make:linux": "electron-forge make --platform=linux --arch=ia32,x64",
    "make:windows": "electron-forge make --platform=win32 --arch=ia32,x64",
    "webpack": "webpack-dev-server --config webpack.dev.js",
    "webpack:build": "webpack --progress --config webpack.prod.js",
    "publish": "electron-forge publish",
    "lint": "eslint . --cache --color"
  },
  "keywords": [
    "image-optimization",
    "electron",
    "developer-tools",
    "developer-experience"
  ],
  "author": {
    "name": "Douglas Nassif Roma Junior",
    "email": "nassifrroma@gmail.com",
    "url": "http://douglasjunior.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/douglasjunior/emage.git"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "wix"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "asar": true,
        "arch": "all",
        "ignore": [
          ".vscode",
          ".cache",
          "src",
          "template",
          "out",
          "screenshot"
        ]
      },
      "electronWinstallerConfig": {
        "name": "E-Mage"
      },
      "electronWixMSIConfig": {
        "name": "E-Mage",
        "appUserModelId": "me.douglasjunior.emage",
        "manufacturer": "E-Mage",
        "ui": {
          "enabled": true,
          "chooseDirectory": true
        }
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "douglasjunior",
        "name": "emage"
      },
      "windowsStoreConfig": {
        "packageName": "me.douglasjunior.emage",
        "name": "E-Mage"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "electron-compile": "6.4.3",
    "electron-squirrel-startup": "1.0.0",
    "react-hot-loader": "4.3.5"
  },
  "devDependencies": {
    "antd": "3.8.4",
    "axios": "0.18.0",
    "bluebird": "3.5.1",
    "moment-timezone": "0.5.21",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-router-dom": "4.3.1",
    "babel-core": "6.26.3",
    "babel-eslint": "9.0.0",
    "babel-loader": "7.1.5",
    "babel-plugin-import": "1.8.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "clean-webpack-plugin": "0.1.19",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "electron-devtools-installer": "2.2.4",
    "electron-forge": "5.2.2",
    "electron-prebuilt-compile": "2.0.7",
    "electron-wix-msi": "1.3.0",
    "eslint": "5.5.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-loader": "2.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.0.0-rc.13",
    "less": "3.8.1",
    "less-loader": "4.1.0",
    "mini-css-extract-plugin": "0.4.1",
    "node-sass": "4.9.3",
    "npm-run-all": "4.1.3",
    "optimize-css-assets-webpack-plugin": "5.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.0",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.17.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.7",
    "webpack-merge": "4.1.4"
  }
}
